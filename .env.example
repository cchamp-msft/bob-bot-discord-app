# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here

# API Endpoints
COMFYUI_ENDPOINT=http://localhost:8188
OLLAMA_ENDPOINT=http://localhost:11434

# HTTP Server Configuration
HTTP_PORT=3000
OUTPUT_BASE_URL=http://localhost:3000

# File Configuration
FILE_SIZE_THRESHOLD=10485760

# Bot Configuration
DEFAULT_TIMEOUT=300

# Max file attachments per Discord message (1â€“10, Discord limit is 10)
MAX_ATTACHMENTS=10

# Ollama Model (discovered via configurator Test button)
